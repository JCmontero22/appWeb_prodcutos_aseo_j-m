# Activar motor de reescritura
RewriteEngine On

# Establecer la base del proyecto (ajústalo según la carpeta donde subiste tu proyecto)
RewriteBase /

# Si no se indica nada en la URL, cargar index.php de /public
DirectoryIndex public/index.php

# Redirigir todas las peticiones al index.php dentro de /public
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ public/index.php [L]

# Proteger archivos sensibles
<FilesMatch "\.(env|sql|log|ini|sh|bat|inc|bak|config|php~)$">
    Order allow,deny
    Deny from all
</FilesMatch>
